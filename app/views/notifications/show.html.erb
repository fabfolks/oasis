<div class="panel panel-info">
  <div class="panel-heading">
    <% if @notification.member_id == current_member.id%>
      <%=link_to @notification.title, notification_path(@notification)%>
    <%else%>
      <%= @notification.title%>
    <% end %>
    <span class='label label-default pull-right'>
      Created by: <%= @notification.member.name%>
    </span>
  </div>
  <div class="panel-body">
    <%= @notification.content%>
  </div>

    <% if current_member.id == @notification.member.id%>
    <div class="btn-group btn-group-justified">
      <div class='btn-group'>
        <%= link_to 'Edit', edit_notification_path(@notification), :class=> 'btn btn-primary' %>
      </div>
      <div class='btn-group'>
        <%= link_to 'Delete', @notification,:confirm => 'Are you sure?', :method => 'delete', :class=> 'btn btn-danger' %>
      </div>
    </div>
  <%end%>
</div>
