<%= form_for @search, :url => members_path, :html => {:method => :get}, :class => 'form-horizontal' do |f| %>
  <div class="form-group">
    <%= f.label :name_contains %>
    <%= f.text_field :name_contains, :class => "form-control", :placeholder => "Name Contains" %><br />
  </div>
  <div class="form-group">
    <%= f.label :blood_group %>
    <%= f.select :blood_group_contains, %w(A+ A- O+ O- B+ B- AB+ AB-), :class => "form-control" %><br />
  </div>
  <div class="btn-group btn-group-justified">
    <div class='btn-group'>
      <%= f.submit 'Search', :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>

</br>

<div class='list-group'>
  <h4>Results</h4>
</div>

<% @members.each do |member| %>
  <div class="list-group">
    <%= link_to member.name, member_path(member), :class=> "list-group-item list-group-item-info" %>
  </div>
<% end %>
<%= will_paginate%>
